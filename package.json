{
  "name": "playwright-test-project",
  "version": "1.0.0",
  "description": "Simple Playwright TypeScript project for testing Shady Meadows B&B application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "install-browsers": "playwright install",
    "report": "playwright show-report",
    "test:contact": "playwright test tests/contact.spec.ts",
    "test:admin": "playwright test tests/admin.login.spec.ts tests/admin.rooms.spec.ts",
    "test:api": "playwright test tests/api.auth.spec.ts",
    "clean": "rmdir /s /q test-results playwright-report 2>nul || true"
  },
  "keywords": [
    "playwright",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
